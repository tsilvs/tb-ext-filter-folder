{
	"manifest_version": 3,
	"name": "Filter Folder Creator",
	"version": "2.1",
	"description": "Creates missing IMAP folders from filter rules",
	"author": "Your Name",
	"browser_specific_settings": {
		"gecko": {
			"id": "filter-folder-creator@example.com",
			"strict_min_version": "115.0"
		}
	},
	"permissions": [
		"accountsRead",
		"messagesRead",
		"tabs",
		"accountsFolders",
		"downloads",
		"storage"
	],
	"options_ui": {
		"page": "options.html",
		"open_in_tab": false,
		"browser_style": false
	},
	"default_locale": "en",
	"action": {
		"default_title": "Filter Folder Creator"
	},
	"background": {
		"scripts": [
			"background.js"
		],
		"type": "module"
	},
	"icons": {
		"48": "icon.png",
		"96": "icon.png"
	}
}